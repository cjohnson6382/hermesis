{
  "manifest_version": 2,

  "name": "Gmail Integration",
  "description": "This extension creates a button on gmail that says compose contract",
  "version": "1.0",
  "browser_action": {
    "default_icon": "/resources/hermesis.ico"
  },
  "background" : {
    "scripts": ["/lib/client.js", "/background/background.js"],
	"persistent": false
  },
  "permissions": [ "activeTab", "tabs", "https://cjohnson.ignorelist.com:4343/*"],
  "content_scripts": [
	{
		"matches":	["http://gmail.google.com/*", "https://gmail.google.com/*", "http://mail.google.com/*", "https://mail.google.com/*"],
		"js":		[
                        "/lib/jquery-3.1.0.min.js",
                        "/lib/angular.min.js",
                        "/lib/angular-animate.js",
                        "/lib/ui-bootstrap-tpls-0.14.3.min.js",
                        "/lib/inboxsdk.js",
                        "extension.js"
                    ],
		"css":		["/css/compose.css", "/lib/bootstrap.min.css"],
		"all_frames":	true,
		"run_at":	"document_end"
	}
  ],
  "content_security_policy": "script-src 'self' http://mail.google.com https://apis.google.com 'unsafe-eval'; object-src 'self'",
  "offline_enabled": false,
  "web_accessible_resources": [
      "/html/popover.html",
      "/resources/hermesis.ico"
  ]
}
